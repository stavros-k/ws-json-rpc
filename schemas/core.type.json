{
    "$schema": "../type-schema.json",
    "PingStatus": {
        "kind": "enum",
        "description": "Status for the Ping method",
        "values": [{ "value": "success", "description": "Success" }, { "value": "error", "description": "Error" }]
    },
    "PingResult": {
        "kind": "object",
        "description": "Result for the Ping method",
        "fields": [
            {
                "name": "message",
                "type": "string",
                "description": "A message describing the result"
            },
            {
                "name": "status",
                "$ref": "PingStatus",
                "description": "The status of the ping"
            }
        ]
    }
}
