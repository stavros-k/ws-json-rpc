{
    "compilerOptions": {
        "target": "ES2023",
        "useDefineForClassFields": true,
        "lib": ["ES2023", "DOM", "DOM.Iterable"],
        "module": "ESNext",
        "skipLibCheck": true,
        "allowImportingTsExtensions": true,
        "isolatedModules": true,
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "jsx": "preserve",
        "incremental": true,
        "noEmit": true,
        "strict": true,
        "esModuleInterop": true,
        "erasableSyntaxOnly": true,
        "allowJs": false
    }
}
